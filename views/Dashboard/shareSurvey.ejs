<%- include('../includes/head.ejs') %>
    <div class="container">
        <%- include('./dashboard-includes/sidebar.ejs') %>
            <main class="main modalMain">
                <%- include('./dashboard-includes/addFormModal.ejs') %>
                    <%- include('./dashboard-includes/topbar.ejs') %>
                        <!-- WORKSPACE NAME HEADER -->
                        <div style="padding:20px;width:97%;display:flex; justify-content:space-between; align-items:center;border-bottom: 1px solid rgba(51, 51, 51,0.539); margin: auto;"
                            class="dashboard-header">
                            <h2 class="pageHeading"><a style="color: blue;" href="/surveys">Surveys</a> / <%=
                                    survey.name%>
                            </h2>
                        </div>

                        <section id="shareSurvey">
                            <h1>
                                <%= survey.name%>
                            </h1>
                            <div class="grid">
                                <p> <span class="surveyData">Date Created:</span>
                                    <%=survey.dateCreated%>
                                </p>
                                <p><span class="surveyData">Last Updated:</span>
                                    <%=survey.lastUpdated%>
                                </p>
                                <p style="position: relative;"><span class="surveyData">Status:</span>
                                    <% if(survey.acceptingResponses==='Yes' ){%> Active <span
                                            style="background-color: rgb(125, 201, 10);padding: 0px 8px;color: greenyellow;border-radius: 50%;position: relative;top: -1px;left: 3px;">.</span>
                                        <%}else{%>Closed <span
                                                style="background-color: rgb(146, 37, 0);padding: 0px 8px;color:  rgb(146, 37, 0);border-radius: 50%;position: relative;top: -1px;left: 3px;">.</span>
                                            <%}%>
                                </p>
                                <p><span class="surveyData">Questions:</span>
                                    <%= survey.numOfQues%>
                                </p>
                            </div>
                            <div style="width: 100%;" class="iconInput">
                                <div>
                                    <i class="bi bi-link-45deg"></i>
                                </div>
                                <div>
                                    <input style="letter-spacing: 0; font-size: 15px;"
                                        value="https://<%= hostname%>/getSurvey/<%=survey.name%>/<%= survey._id%>"
                                        class="linkInput" type="text" name="phoneNumber">
                                </div>
                            </div>
                            <a href="/getSurvey/<%= survey.name%>/<%= survey._id%>"> <button class="btn1">
                                    Open Survey
                                </button></a>
                        </section>
            </main>
    </div>
    <%- include('../includes/end.ejs') %>